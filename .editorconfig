# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8

[*.{scss,css}]
indent_size = 2

[*.{js,jsx,html,pug}]
indent_size = 2

[{package.json}]
indent_size = 2
